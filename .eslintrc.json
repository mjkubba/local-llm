{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "warn",
        "no-unused-vars": "warn",
        "no-console": "off"
    },
    "ignorePatterns": [
        "out",
        "dist",
        "node_modules",
        "src/test/**/*.js"
    ],
    "overrides": [
        {
            "files": ["src/test/**/*.js"],
            "env": {
                "mocha": true
            }
        }
    ]
}